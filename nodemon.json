{
  "watch": ["src"],
  "ext": "js,json",
  "ignore": ["dist", "node_modules", "logs", ".git"],
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "200ms",
  "verbose": true,
  "execMap": {
    "js": "node"
  },
  "nodeArgs": ["--expose-gc", "--trace-warnings", "-r", "@babel/register"],
  "exec": "node --expose-gc --trace-warnings -r @babel/register ./src/app.js"
}
